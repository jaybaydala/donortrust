      <div id="subNav">
        <ul class="subNav li">
          <li id="project-nav-overview"<%=     ' class="current"' if params[:action] == 'show'         && params[:controller] == 'dt/projects' %>><%= link_to "Overview ", dt_project_path(@project) %></li>
          <li id="project-nav-specs"<%=        ' class="current"' if params[:action] == 'details'      && params[:controller] == 'dt/projects' %>><%= link_to "Project Details ", dt_details_project_path(@project) %></li>
          <% if @project && @project.community_id? && @project.community %><li id="project-nav-community"<%= ' class="current"' if params[:action] == 'community'    && params[:controller] == 'dt/projects' %>><%= link_to "Community ", dt_community_project_path(@project) %></li><% end %>
          <% if @project && @project.nation_id? && @project.nation %><li id="project-nav-nation"<%= ' class="current"' if params[:action] == 'nation'       && params[:controller] == 'dt/projects' %>><%= link_to "Nation ",  dt_nation_project_path(@project) %></li><% end %>
          <li id="project-nav-organization"<%= ' class="current"' if params[:action] == 'organization' && params[:controller] == 'dt/projects' %>><%= link_to "Organization ", dt_organization_project_path(@project) %></li>
        </ul>
        <% if @project.fundable? %><div id="buttonInvestSM"><%= link_to "<span>Invest</span>", dt_new_investment_path(:project_id => @project) %></div><% end %>
        <div id="buttonConnect"><%= link_to "<span>Connect</span> ", dt_connect_project_path(@project), ( params[:action] == 'connect' && params[:controller] == 'dt/projects' ? { :class => "current"  } : {} ) %></div>
      </div><!-- subNav ends -->
