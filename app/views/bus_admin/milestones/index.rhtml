<div id="contentContainer">
	<div class="leftColW">
	<% if flash[:error] %><div class="error"><%= flash[:error] %></div><% end %>
	<% if flash[:notice] %><div class="notice"><%= flash[:notice] %></div><% end %>
	<% if @project %>
		<h1>Milestones</h1>
		<h2>(Project: <%= @project.name %>)</h2>
		<% if @project.milestones && @project.milestones.length > 0 %>
			<table id="list-table">
				<tr>
					<th>Milestone</th>
					<th>Target Date</th>
					<th>Status</th>
					<th>&nbsp;</th>
					<th>&nbsp;</th>
					<th>&nbsp;</th>
					<th>&nbsp;</th>
				</tr>
				<% for milestone in @project.milestones %>
					<tr>
						<td>
							<%= milestone.name %>
						</td>
						<td>
							<%= milestone.target_date.to_s %>
						</td>
						<td>
							<%= milestone.milestone_status.name %>
						</td>
						<td>
							<%= link_to "Tasks", bus_admin_project_milestone_tasks_url(@project, milestone) %>
						</td>
						<td>
							<%= link_to "Edit", bus_admin_project_edit_milestone_url(@project, milestone) %>
						</td>
						<td>
							<%= link_to "Delete", bus_admin_project_milestone_url(@project, milestone), :method => :delete, :confirm => "Are you sure you want to delete this milestone?" %>
						</td>
						<td>
							<%= link_to "Show", bus_admin_project_milestone_url(@project, milestone) %>
						</td>
					</tr>
				<% end %>
			</table>
		<% else %>
			<p>There are no milestones for this project.</p>	
		<% end %>
	<% end %>
	<br />
	<p>
		<%= link_to "Add New Milestone", bus_admin_project_new_milestone_url(@project) %>
		&nbsp;
		<%= link_to "Back To Project List", bus_admin_projects_url %>
	</p>
	
	</div>
</div>