<%- content_for :head do -%>
<%= stylesheet_link_tag 'dt/cart' %>
<%= javascript_include_tag "dt/checkout" %>
<%- end -%>
<%- content_for :html_title do -%>Checkout &ndash; Step 1 of 4<%- end -%>
<%- content_for :page_title do -%>Checkout<%- end -%>
<%- content_for :nav do -%><%= checkout_nav %><%- end -%>

<h2>Step 1 of 4 - Support</h2>
<%= error_messages_for :order %>
<% form_for(:order, :url => dt_checkout_path, :html => {:id => "supportform", :name => "supportform"}) do |f| %>
<%= render :partial => 'support', :locals => {:f => f} %>
<%= f.hidden_field :order_number %>
<% end %>

<%- content_for :sidebar do -%>
<h2><%= link_to "My Cart", dt_checkout_path, :method => :delete %></h2>
  <%= render "dt/cart/sidebar" %>
  <%= render "dt/accounts/profile_sidebar" %>
  <%= render :partial => 'dt/checkouts/verisign' %>
<%- end -%>

<% content_for :google_analytics_path do %>/checkout/support_cf.html<% end %>
