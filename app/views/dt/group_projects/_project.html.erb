      <li><%= link_to project.name, dt_project_path(project) %>
        <% if project.community %><p><strong>Location:</strong> <%= project.community.name %>, <%= project.nation.name %></p><% end %>
        <p>
          <strong>Cause:</strong> Water 
          <% if project.project_status_id? && project.project_status %>| <strong>Status:</strong> <%= project.project_status.name %> <% end %>
          <% if group_invested(project, @group) %>| <strong>Invested:</strong> <%= number_to_currency(group_invested(project, @group)) %> <% end %>
        </p>
        <p>
          <span class="linkMinor">
          <% if project.fundable? %><%= link_to "INVEST IN THIS PROJECT", new_dt_investment_path(:account_id => current_user, :project_id => project) %><% end %>
          <% if current_member(@group) && current_member(@group).admin? %> | <%= link_to "REMOVE PROJECT", dt_group_group_project_path(@group, project.id), :method => :delete %><% end %>
          </span>
        </p>
      </li>