<% title(params[:search].blank? ? 'Featured Projects' : 'Project Search') %>

<%= @projects.total_entries %> found

<%= will_paginate %>
<div class="clearfix">
<% @projects.each_with_index do |project, i| %>
<div class="span-4 append-bottom<%= ' last' if (i+1)%3 == 0 %>">
  <article id="project-1" class="project-module">
    <div class="project-module-top">
      <div class="project-livesaffected-num"><%= project.lives_affected %></div>
      <div class="project-livesaffected">lives affected plus yours</div>
    </div>
    <div class="project-place"><%= Place.find(project.country_id).name %></div>
    <div class="project-title"><%= truncate(project.name, :length => 48) %></div>
    <div class="project-like">
      <a href="#"><img src="/images/nav/like-black.png" width="21" height="27" alt=""> Like</a>
    </div>
    <div class="project-progress">
      <div class="plain">Funding Progress</div>
      <div class="project-progress-bar">
        <div class="project-progress-fg" style="width:<%= project.get_percent_raised %>%"></div>
      </div>
    </div>
  </article>
</div>
<% end %>
</div>

<%= will_paginate %>
