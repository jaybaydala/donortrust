    <%= submit_tag 'Search', :size =>40, :onsubmit=>"$('filter_keywords').value = $('keywords').value;"%>
  </span>
  <span id="count_results_container" style="float:right;position:relative;bottom:20px;background:yellow">
  </span>
  <% end -%>
</div>

