<li class="term">
  <%- if facet == :search_text %>
    <%= link_to search_term, dt_projects_path(:search => search_query_without_text(facet, search_term)) %>
  <%- elsif facet == :sector_ids -%>
    <%= link_to "#{search_term.name}", dt_sector_path(:id => search_term.id) %>
  <%- elsif [:partner_id, :country_id, :project_status_id].include?(facet) -%>
    <%= link_to "#{search_term.name}", dt_projects_path(:search => search_query_without_term(facet, search_term.id)) %>
  <%- else -%>
    <%= link_to "#{number_to_currency(search_term.first.to_i, :precision => 0)} - #{number_to_currency(search_term.last.to_i, :precision => 0)}", dt_projects_path(:search => search_query_without_term(facet, search_term)) %>
  <%- end -%>
</li>
