<%- content_for :html_title do -%>Deposit<%- end -%>
<%- content_for :nav do -%><%= dt_account_nav %><%- end -%>
<%- content_for :top_content do -%><%= render :partial => 'dt/accounts/inactive' if logged_in? && !current_user.activated? %><%- end -%>

<%= error_messages_for :deposit %>
<% form_for(:deposit, :url => dt_account_deposits_path(:account_id => current_user), :html => {:id => "depositform", :name => "depositform"}) do |f| %>
<div class="userform">
  <%= render :partial => 'dt/shared/form_requirednote' %>
  <fieldset>
    <legend>Deposit</legend>
    <ol>
  		<li><label for="deposit_amount" class="wide"><%= form_required %>Deposit Amount</label> $ <%= f.text_field :amount %>
  		  <div class="note" style="margin-left:135px;">Example: $100</div>
		  </li>
    </ol>
  </fieldset>

  <div style="float:right;" class="clearfix"><%= submit_tag 'Add to Cart', :class => 'buttonsubmit' %></div>
</div>
<% end %>

<%- content_for :sidebar do -%>
  <%= dt_profile_sidebar %>
<%- end -%>
