<%- content_for :html_title do -%>Deposit<%- end -%>
<%- content_for :nav do -%><%= dt_account_nav %><%- end -%>

<%= error_messages_for :deposit %>
<% form_for(:deposit, :url => dt_account_deposit_path(:account_id => current_user, :id => params[:id]), :html => {:id => "depositform", :name => "depositform", :method => :put}) do |f| %>
<div class="userform">
  <%= render :partial => 'dt/shared/form_requirednote' %>
  <fieldset>
    <legend>Deposit</legend>
    <ol>
  		<li><label for="deposit_amount"><%= form_required %>Deposit Amount</label><%= f.text_field :amount, :value => (@deposit.amount? ? number_to_currency(@deposit.amount) : "$") %></li>
    </ol>
  </fieldset>

  <%= submit_tag 'Update Deposit', :class => 'buttonsubmit' %>
</div>
<% end %>

<%- content_for :sidebar do -%>
  <%= dt_profile_sidebar %>
<%- end -%>
