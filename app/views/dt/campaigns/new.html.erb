<h1>New campaign</h1>

<%= error_messages_for :campaign %>
<div id="new_campaign" class="campaign_form">
	<% form_for([:dt, @campaign]) do |f|%>
		<fieldset>
  			<legend>Campaign Details</legend>
			<label>Name</label>
    		<%= f.text_field :name %>

			<label>Short Name</label>
    		<span class="small_text">http://www.christmasfuture.org/</span><%= f.text_field :short_name %>
			<%= what_is_this?'short_name', 'The short name is a small (10-20 characters) name to describe your campaign. It should not contain any spaces and should be concise so as to convey the central idea of your campaign. Also this name will be used to provide your campaign with a Christmas Future URL. http://www.christmasfuture.org/yourCampaignShortName'%>
			<%= observe_field	:campaign_short_name, 
								:frequency => 1,
								:url => validate_short_name_of_dt_campaigns_path,
								:with => :campaign_short_name,
								:update => :short_name_report
								%>
			<%= show_spinner("Validating ") %>
			<div id="errors" style="display:none;">
			</div>


		    <label>Campaign type</label>
			<%= collection_select :campaign_type, :id, CampaignType.find(:all), :id, :name %>
			<%= observe_field :campaign_type_id, 
									:frequency => 0.25, 
									:url => { :action => :update_team_config_options}, 
									:with => :campaign_type_id
			%>

			<label>Contact Email</label>
			<%= f.text_field :email %> <span class="small_text">Use My Email </span>
			<%= f.check_box :use_user_email, :onclick => "Element.toggle('campaign_email');"%> 
			
			<label>Description</label>
	    	<%= f.text_area :description, :rows => 10, :cols => 70%>
		</fieldset>
		<fieldset>
			<legend>Monetary Details</legend>
			
			<label>Fundraising Goal</label> <span class="small_text"></span>
		    <%= f.text_field :fundraising_goal %> <span class="small_text">CAD $</span>
		
			<label>Campaign Fee</label>
			<%= f.text_field :fee_amount %> <span class="small_text">CAD $</span>
		
		</fieldset>

		<fieldset>
  			<legend>Campaign Dates</legend>
			<label>Start date</label>
	    	<%= f.datetime_select :start_date %>
			
			<label>End Date</label>
	    	<%= f.datetime_select :end_date %>
		</fieldset>

		<fieldset>
  			<legend>Location</legend>
			<label>Address</label>
	    	<%= f.text_field :address %>
	
			<label>City</label>
			<%= f.text_field :city %>
			
			<label id="province">Province</label>
			<div id="province_holder">
				<%= province_selector(:campaign, :province)%>
			</div>
			
			<label>Country</label>
			<%= f.country_select :country, ["Canada", "United States"]  %>
	
			<%= observe_field :campaign_country, 
									:frequency => 0.25, 
									:url => { :action => :update_address_details_for_country}, 
									:with => :country
			%>		
			
			<label id="postal_code">Postalcode</label>
			<%= f.text_field :postalcode %>

			

		</fieldset>
		
		<fieldset id="team_settings">
  			<legend>Team Settings</legend>
			<label>Require Authorization to Add Team</label>
			<%= f.check_box :require_team_authorization %>
			
			<label>Allow Multiple Teams</label>
			<%= f.check_box :allow_multiple_teams %>
			
			<label>Maximum Number of Teams (optional)</label>
			<%= f.text_field :max_number_of_teams %>
			
			<label>Maximum Team Size (optional)</label>
			<%= f.text_field :max_size_of_teams %>
			
			<label>Maximum Number of Participants (optional)</label>
			<%= f.text_field :max_participants %>
		</fieldset>
		


		<fieldset id="participant_settings" style="display:none;">
  			<legend>Participant Settings</legend>
			<label>Require Authorization to Join Campaign</label>
			<%= f.check_box :require_team_authorization %>
			
			<label>Maximum Number of Participants</label>
			<%= f.text_field :max_participants %>
		</fieldset>

	<p>
    	<%= f.submit "Create" %>
  	</p>
	<% end %>
</div>

<%= link_to 'Back', dt_campaigns_path %>
