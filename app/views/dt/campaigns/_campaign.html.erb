<%
	show_address ||= false 
	show_admin ||= false
%>
<div class="campaign" id="campaign_<%= campaign.id%>">
	<h2><%= link_to campaign.name, dt_campaign_path(campaign) %>
			<%= (" | " + link_to('Manage Campaign', manage_dt_campaign_path(campaign))) unless not campaign.owned? -%>
			<% if campaign.allow_multiple_teams %>
				| <%= link_to 'Create a Team', new_dt_campaign_team_path(campaign) %> |
				<%= link_to 'Join a Team', dt_campaign_teams_path(campaign) %>
			<% end %>
			<%= ("| " + link_to('Join Campaign', new_dt_campaign_team_path(campaign))) unless campaign.allow_multiple_teams?%>
			
	</h2>
	<ul class="details_list">
		<li><span class="detail"><strong>Fundraising Goal:</strong><%= campaign.fundraising_goal_with_currency%></span></li>
		<li><span class="detail"><strong>Start Date:</strong><%= campaign.start_date %></span></li>
		<li><span class="detail"><strong>End Date:</strong><%= campaign.end_date%></span></li>
	</ul>
	<p>
		<%= campaign.description %>
	</p>
	
	<ul class="details_list">
		<li><span class="detail"><strong>Creator:</strong><%= campaign.creator.name%></span></li>
		<li><span class="detail"><strong>Email:</strong><%= campaign.email%></span></li>
	</ul>
	<% if show_address == true %>
	<h2>Address</h2>
	<div id="<%= "contact_#{campaign.id}"%>">
		<p class="address">
			<%= campaign.address %> <br />
			<%= campaign.province %>, <%= campaign.postalcode %> <br />
			<%= campaign.country %>
		</p>
	</div>
	<% end %>
	<% if show_admin == true%>
	<div class="campaign_admin">
		<h2 class='admin'><span style="color:#000">Admin</span> |
			<%= ( link_to_remote('Activate', :update => :campaigns,
											:url => activate_dt_campaign_path(campaign), 
										   	:complete => "Element.show('flash');") + " | " ) unless not campaign.pending?
											 %>
			<%= delete_icon(dt_campaign_path(campaign)) %> | 
			<%= link_to('Archive Campaign',dt_campaign_path(campaign), :confirm => 'Are you sure?', :method => :delete )%>
		</h2>
	</div>
	<% end %>
</div>