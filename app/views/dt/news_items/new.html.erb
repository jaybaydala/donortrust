<h1>New news_item</h1>

<%= error_messages_for :news_item %>

<% form_for(@news_item) do |f| %>
  <p>
    <b>Subject</b><br />
    <%= f.text_field :subject %>
  </p>

  <p>
    <b>Content</b><br />
    <%= f.text_area :content %>
  </p>

  <p>
    <b>User</b><br />
    <%= f.text_field :user %>
  </p>

  <p>
    <b>News</b><br />
    <%= f.text_field :news %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', news_items_path %>
