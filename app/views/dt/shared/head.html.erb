      <div id="header" class="clearfix">
        <div id="logo" class="clearfix">
          <%= link_to image_tag('/images/dt/brand_elements/cf_headerlogo.gif', :alt => "ChristmasFuture &ndash; Change the world&hellip;for good"), "/" %>
        </div>
        
        <div id="loginbug">
          <ul>
            <%- if logged_in? -%>
              <li>Welcome, <%= link_to h(current_user.name), dt_account_path(current_user) %> | </li>
              <li><%= link_to "Cart", dt_cart_path %> | </li>
              <li><%= link_to 'Logout', dt_logout_url(:protocol => 'http://') %></li>
            <%- else -%>
              <li><%= link_to 'Login', dt_login_path %> | </li>
              <li><%= link_to 'Create Account', dt_signup_path %> | </li>
              <li><%= link_to "Cart", dt_cart_path %> </li>
            <%- end -%>
          </ul>
          <% if session[:gift_card_balance] %>
          <ul id="giftcard-amount">
            <li><strong>Gift Card Balance</strong>: <%=h number_to_currency(session[:gift_card_balance]) %></li>
          </ul>
          <% end %>
        </div>
      </div>
