      <div id="header" class="clearfix">
        <div id="logo" class="clearfix">
          <%= link_to image_tag('/images/dt/brand_elements/cf_headerlogo.gif', :alt => "Uend: &ndash; Change the world&hellip;for good"), "/dt/" %>
        </div>
        
        <div id="loginbug">
          <%= link_to image_tag('dt/authentications/facebook_32.png', :alt => "Login with Facebook"), '/dt/auth/facebook' %>
          <ul>
            <%- if logged_in? -%>
              <li>Welcome, <%= h(current_user.name) %> | </li>
              <li><%= link_to "iEnd Profile", dt_iend_path(current_user) %> | </li>
              <li><%= link_to "Cart", dt_cart_path %> | </li>
              <li><%= link_to 'Logout', dt_logout_url(:protocol => ssl_protocol) %></li>
            <%- else -%>
              <li><%= link_to 'Login', dt_login_path %> | </li>
              <li><%= link_to 'Create Account', dt_signup_path %> | </li>
              <li><%= link_to "Cart", dt_cart_path %> </li>
            <%- end -%>
          </ul>
          <% if session[:gift_card_balance] %>
          <ul id="giftcard-balance">
            <li><strong><%= link_to "Gift Card Balance", open_dt_gifts_path %></strong>: <%=h number_to_currency(session[:gift_card_balance]) %></li>
          </ul>
          <% end %>
        </div>
      </div>
