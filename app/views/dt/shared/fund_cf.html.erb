<% if logged_in? && admin_project %><fieldset>
  <legend>100% of your funds go to the projects you select</legend>
  <ul>
	  <li><p class="textsm">Would you like to support the <%= link_to "Uend: organization", dt_project_path(admin_project), :rel => 'blank' %>?</p></li>
	  <li><label for="fund_cf">I would like to support Uend: directly</label><%= check_box_tag "fund_cf" %>&nbsp;&nbsp;&nbsp;&nbsp;</li>
	  <li><label for="fund_cf_percentage">Percentage to add</label><%= text_field_tag "fund_cf_percentage", "5%" %></li>
  </ul>	
</fieldset>
<% else %>
<div><strong>100% of your funds go to the project(s) you select</strong></div>
<p><%= link_to "Login", login_path %> to support the <%= link_to "Uend: organization", dt_project_path(admin_project), :rel => 'blank' %> directly</p>
<% end %>
