	<li id="membership-<%= membership.id %>" class="list-item">
	<div>
	<%= link_to "#{membership.user.first_name} #{membership.user.last_name}", dt_membership_path(membership) -%>
	<% if @membership.owner? -%>   
	<% if membership.admin? -%>
	|	<%= link_to "Make Group Admin", { :action => "bestow", :id => membership.id }, :method => :post -%> 
	<% end -%>  
	<% if membership.owner? -%>
	|	<%= link_to "Remove Group Admin status", { :action => "revoke", :id => membership.id }, :method => :post -%> 
	<% end -%>
	<% end -%>  	
	</div>
	</li>
         