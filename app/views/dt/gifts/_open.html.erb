<% content_for :top_content do %>
  <div class="prepend-top prepend-2"><h1>OPEN YOUR GIFT</h1></div>
<% end %>

<div class="clearfix" style="position:relative;">
  <div class="span-3" id="gift-outline">
    <%= image_tag "icons/gift-outlines.png", :alt => '' %>
  </div>
  <div class="span-11 last">
    <% semantic_form_for :pickup, :url => open_dt_gifts_path, :html => { :id => "giftpickupform", :method => :get } do |f| %>
      <% f.inputs do %>
        <li class="string" id="code_input">
          <%= label_tag :code, "Enter your Pickup Code" %>
          <%= text_field_tag :code %>
        </li>
        <%= f.commit_button "Open" %>
      <% end %>
    <% end %>
  </div>
</div>
<div class="clearfix" id="open_gift-description">
  <div class="span-1 step">1</div>
  <div class="span-3 description">
    Open your gift and begin helping a community climb out of poverty.
  </div>
  <div class="span-1 step border-left">2</div>
  <div class="span-3 description">
    Find a project you want to support.
  </div>
  <div class="span-1 step border-left">3</div>
  <div class="span-4 append-1 last description">
    Use your gift card balance to experience the change you want to see.
  </div>
</div>
