<div class="gift">
  <h5><strong>Gift: <%= createdgift.project_id? ? "Project" : "Gift Card" %></strong></h5>
  <% if createdgift.e_card %><div class="thumbnail"><%= image_tag url_for_file_column(createdgift.e_card, "small"), :alt => "" %></div><% end %>
  <div style="float:right;"><%= button_to_function "Preview", "window.open('#{preview_dt_gifts_path(:gift => createdgift.attributes.merge({:preview => 1}))}', 'preview', 'width=800,height=440,resizable=1,scrollbars=1')", :class => "buttonsubmit" %></div>
  <p>
    <strong>To:</strong> <%=h createdgift.to_name %> &lt;<%=h createdgift.to_email %>&gt;<br />
  </p>

  <% if createdgift.project_id? && createdgift.project %>
  <p><%= link_to createdgift.project.name, dt_project_path(createdgift.project_id) %></p>
  <% else %>
  <p>Your recipient will choose a project</p>
  <% end %>
</div>
