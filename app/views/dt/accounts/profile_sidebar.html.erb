<% unless logged_in? %>
  <h2>Login</h2>
  <% form_for(:user, :url => dt_session_path, :html => { :name => 'loginform' }) do |f| %>
    <% store_location %>
    <div class="textsm">
    <label for="login">Username/Email</label> <%= text_field_tag 'login', nil, :tabindex => 1 %><br />
    <label for="password">Password</label> <%= password_field_tag 'password', nil, :tabindex => 2 %><br />
    <label><%= check_box_tag "remember_me" %> Remember Me</label> | <%= link_to "Create Account", new_dt_account_path %><br />
    <%= submit_tag "Login", :class => "buttonsubmit" %><br />
    <div style="clear:left;"><%= link_to "Forgot your password?", reset_dt_accounts_path %></div>
    </div>
  <% end %>
<% end %>

<h2>My Profile</h2>
<% if logged_in? %>
  <p><strong><%= current_user.full_name %></strong> 
  <% unless current_user.under_thirteen? %>
  (<%= current_user.name %>)<% end %></p>
	<div class="projectactions">
    <ul>
      <li class="blueblock"><%= link_to "My Account Summary", dt_account_path(current_user) %></li>
      <li class="blueblock"><%= link_to "Edit My Account", edit_dt_account_path(current_user) %></li>
      <li class="blueblock"><%= link_to "Make a Deposit", new_dt_account_deposit_path(:account_id => current_user) %></li>
      <li class="blueblock"><%= link_to "Logout", dt_logout_path %></li>
      <% if @group && !@group.new_record? %>
      <% if !current_member(@group) || !current_member(@group).founder? %><li class="blueblock"><% if current_member(@group) %><%= link_to "&nbsp;Leave Group", dt_group_membership_path(:id => current_member(@group).id, :group_id => @group.id), :method => 'delete', :confirm => "Do you want to leave #{@group.name}?" %><% else %><%= link_to "&nbsp;Join This Group", dt_group_memberships_path(@group), :method => :post, :confirm => "Do you want to join #{@group.name}?" %><% end %></li><% end %>
      <% if current_member(@group) && current_member(@group).founder? %><li class="blueblock"><%= link_to "&nbsp;Delete this Group", dt_group_path(@group), :method => :delete, :confirm => "Do you want to delete #{@group.name}?" %></li><% end %>
      <% end %>
  	</ul>
  </div>

  <h5>My Portfolio</h5>
  <div class="quickfacts">
  <ul> 
	  <li><strong>Groups:</strong> <%= render :partial => 'dt/accounts/membership', :collection => current_user.memberships(:include => :group) %><% if current_user.memberships && current_user.memberships.size == 0 %><%= link_to "Find a group to join", dt_groups_path %> or <%= link_to "Create a group", new_dt_group_path %><% end %></li>
	  <li><strong>Invested:</strong> <%= number_to_currency(current_user.invested) %></li>
	  <li><strong>Account Balance:</strong> <%= number_to_currency(current_user.balance) %></li>
  </ul>
  </div>
  <% if current_user.projects.size > 0 %>
  <div class="projectlist">
  <h5>My Projects</h5>
  <ul>
    <%= render :partial => 'dt/projects/project_list_item', :collection => current_user.projects %>
  </ul>
  </div>
  <% end %>
<% else %>
  <p>Have a ChristmasFuture account? Login below or <strong><%= link_to "Sign up", dt_signup_path %>!</strong></p>
  
  <p style="margin-bottom:0;">A ChristmasFuture account allows you to:</p>

  <ul>
    <li>track your giving history over time and your impact in the world</li>
    <li>access your tax receipts and printable gift cards online</li>
    <li>resend gifts to alternate email addresses</li>
    <li>save information preferences, so you don&rsquo;t have to re-enter it next time</li>
    <li>join a group with people who are interested in the same projects and causes that you are</li>
    <li>conveniently track projects you have supported in one place </li>
    <li>create a &ldquo;projects wishlist&rdquo; and more!</li>
  </ul>
  
  <% unless @controller.class == Dt::CheckoutsController %>
  <div class="projectactions">
    <ul>
      <li class="blueblock"><%= link_to "Make a Deposit", new_dt_account_deposit_path(:account_id => current_user) %></li>
      <li class="blueblock"><%= link_to "Invest in a project", new_dt_investment_path %></li>
      <li class="blueblock"><%= link_to "Give a Gift", new_dt_gift_path %></li>
    </ul>
  </div>
  <% end %>
<% end %>

<div class="verisign">
  <script src="https://seal.verisign.com/getseal?host_name=www.christmasfuture.org&amp;size=S&amp;use_flash=NO&amp;use_transparent=NO&amp;lang=en" type="text/javascript"></script>
</div>
