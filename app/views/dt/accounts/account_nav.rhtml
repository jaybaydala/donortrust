<div id="subNavWide">
<ul class="subNav li">
<% if logged_in? %>
<li><%= link_to "Account Summary", dt_account_path(current_user) %></li>
<li<%= ' class="current"' if params['controller'] == 'dt/accounts' && params['action'] == 'edit' %>><%= link_to "Edit Profile", dt_edit_account_path(current_user) %></li>
<li<%= ' class="current"' if params['controller'] == 'dt/groups' %>><%= link_to "Groups", dt_groups_path() %></li>
<li<%= ' class="current"' if params['controller'] == 'dt/deposits' %>><%= link_to "Deposit", dt_new_deposit_path() %></li>
<% else %>
<li<%= ' class="current"' if params['controller'] == 'dt/accounts' && params['action'] == 'signin' %>><%= link_to "Login", dt_signin_accounts_path() %></li>
<li<%= ' class="current"' if params['controller'] == 'dt/accounts' && params['action'] == 'new' %>><%= link_to "Signup", dt_new_account_path() %></li>
<% end %>
<li<%= ' class="current"' if params['controller'] == 'dt/gifts' %>><%= link_to "Give a Gift", dt_new_gift_path() %></li>
</ul>
</div>

<% if logged_in? %>
<%= render :partial => 'dt/accounts/inactive' if !current_user.activated? %>
<% end %>