<%- content_for :html_title do -%>Edit Password/Authentication<%- end -%>
<%- content_for :head do -%><%= javascript_include_tag "dt/accounts" %><%- end -%>

<%= render 'iend/shared/header' %>
<%= iend_user_nav %>

<%= error_messages_for :password %>

<% semantic_form_for([:iend, @user]) do |f| %>
  <% f.inputs "Change Password" do %>
    <%= f.input :current_password, :hint => "If you wish to change your password, please enter your current password along with a new password. It must be longer than 4 characters and try to make it something you'll remember." %>
    <%= f.input :password %>
    <%= f.input :password_confirmation, :label => "Confirm Password" %>
  <% end %>
  <% f.buttons do %>
    <%= f.commit_button %>
  <% end %>
<% end %>
