<% html_title("#{@user.first_name} #{@user.last_name}") %>

<h1>
    <a href="<%= @user.image.url(:large) %>" class="colorbox" title="<%= @iend_profile.formatted_name %>">
      <%= image_tag(@user.image.url, :alt => '') %></a>
  <%= "#{@user.first_name} #{@user.last_name}" %>
</h1>
<p><strong>Location: <%= [@user.city, @user.province, @user.country].compact.join(', ') %></strong></p>

<% if @user == current_user %>
  
  <div class="clearfix" id="impact-stats">
    <div class="span-2 profile-stats-impact left">
      <div id='impact-text'>Impact</div>
    </div>

    <div id="stats-tabs" class="span-2 profile-stats-impact">
      <div class="impact-tab" id="impact-tab-me">Me</div>
      <div class="impact-tab" id="impact-tab-friends">My Friends</div>
      <div class="impact-tab" id="impact-tab-uend">UEnd</div>
    </div>
    
    <div id="impact-stats-me" class="span-9 append-1 last profile-stats">
      <div class="span-3">
        <div class="stats-value">2</div>
        <div class="stats-text">gifts</div>
      </div>
      <div class="span-3">
        <div class="stats-value">$150.00</div>
        <div class="stats-text">dollars</div>
      </div>
      <div class="span-3 last">
        <div class="stats-value">1,387</div>
        <div class="stats-text">people affected</div>
      </div>
    </div>

    <div id="impact-stats-friends" class="span-9 append-1 last profile-stats" style="display:none">
      <div class="span-3">
        <div class="stats-value">2</div>
        <div class="stats-text">gifts</div>
      </div>
      <div class="span-3">
        <div class="stats-value">$150.00</div>
        <div class="stats-text">dollars</div>
      </div>
      <div class="span-3 last">
        <div class="stats-value">1,387</div>
        <div class="stats-text">people affected</div>
      </div>
    </div>

    <div id="impact-stats-uend" class="span-9 append-1 last profile-stats" style="display:none">
      <div class="span-3">
        <div class="stats-value">2</div>
        <div class="stats-text">gifts</div>
      </div>
      <div class="span-3">
        <div class="stats-value">$150.00</div>
        <div class="stats-text">dollars</div>
      </div>
      <div class="span-3 last">
        <div class="stats-value">1,387</div>
        <div class="stats-text">people affected</div>
      </div>
    </div>
  </div>
<% end %>

<div class="clearfix">
  <%= render "iend/shared/private_sidebar" %>

  <div class="span-10 last">
    <%= render "iend/shared/public_profile_nav" %>
    
    <h2 style="margin-left:12px;">Projects</h2>
    <!-- paging goes here -->
    <div class="span-9 prepend-1 pageshadow-10 last">
      <div class="clearfix" id="projects">
      <% @user.projects_funded.each_with_index do |project, i| %>
        <div class="span-4 append-bottom<%= ' last' if (i+1)%2 == 0 %>">
          <%= render :partial => 'dt/projects/project', :locals => { :project => project } %>
        </div>
      <% end %>
      </div>
      
      <% if logged_in? && current_user.authentications.facebook.present? || true == true %>
        <div class="sharing">
          <h2>Facebook</h2>
          <%= render :partial => 'dt/facebook_posts/form', :locals => { :message => "I’m all set up with a profile on UEnd.org and joining a group of people helping end poverty around the world…here I go!\n#{root_url(:protocol => 'http://')}", :cols => 45 } %>
        </div>
      <% end %>
      
    </div>
  </div>
  
</div>
