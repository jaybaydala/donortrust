<% if @iend_profile.present? %>
  <% html_title(@iend_profile.name? ? "#{@user.first_name} #{@user.last_name}" : 'Anonymous') %>

  <div style="padding-bottom:0.5em;">
    <h1>
      <%= image_tag(@user.image.url, :alt => '') if @iend_profile.picture? && @user.image? %>
      <%= @iend_profile.name? ? "#{@user.first_name} #{@user.last_name}" : 'Anonymous' %>
    </h1>
    <% if @iend_profile.location? %>
      <p><strong>Location: <%= [@user.city, @user.province, @user.country].compact.join(', ') %></strong></p>
    <% end %>
  </div>

  <div class="clearfix">
    <div class="span-4">
      <div class="profile-actions">
        <%= link_to("+ Add as friend", iend_friendships_path(:friend_id => @user.id), :id => "add_as_friend", :method => :post, :class => "smallbutton") if show_add_friend_button?(@user) %>
      </div>
      
      <aside class="profile-summarybox">
        <div class="icon">
          <%= image_tag 'give/sidebar-uforward.png', :alt => "U:Forward" %><br>
          Pay it forward as a gift.
        </div>
        <div class="summary">
          <% if @iend_profile.gifts_given? %>
            <div style="margin-bottom:4px;">Gifts given: <%= @user.gifts.count %></div>
          <% end %>
          <% if @iend_profile.gifts_given_amount? %>
            <div style="margin-bottom:4px;">Given as gifts: <%= number_to_currency(@user.gifts.sum(:amount), :precision => 0) %></div>
          <% end %>
          <% if @iend_profile.gifts_received? %>
            <div style="margin-bottom:4px;">Gifts received: <%= @user.orders.count(:conditions => "gift_card_payment_id IS NOT NULL")  %></div>
          <% end %>
          <div style="margin-bottom:4px;"><%= link_to "Give a gift", new_dt_gift_path %></div>
        </div>
      </aside>

      <aside class="profile-summarybox">
        <div class="icon">
          <%= image_tag 'give/sidebar-udirect.png', :alt => "U:Direct" %><br>
          Give directly to a project.
        </div>
        <div class="summary">
          <% if @iend_profile.number_of_projects_funded? %>
            <div style="margin-bottom:4px;">Projects funded: <%= @user.projects_funded.size %></div>
          <% end %>
          <% if @iend_profile.amount_funded? %>
            <div style="margin-bottom:4px;">Amount given: <%= number_to_currency(@user.investments.sum(:amount), :precision => 0) %></div>
          <% end %>
          <% if @iend_profile.lives_affected? %>
            <div style="margin-bottom:4px;">Lives affected: <%= @user.projects_funded.inject(0){|sum,p| sum += p.lives_affected.to_i } %></div>
          <% end %>
          <div style="margin-bottom:4px;"><%= link_to "Choose a project", dt_projects_path %></div>
        </div>
      </aside>

      <aside class="profile-summarybox">
        <div class="icon">
          <%= image_tag 'give/sidebar-upowered.png', :alt => "U:Powered" %><br>
          Fund UEnd Operations.
        </div>
        <div class="summary">
          <% if @iend_profile.show_uend_amount? %>
            <div style="margin-bottom:4px;">Monthly giving: <%= number_to_currency(@user.subscriptions.sum(:amount)) %></div>
          <% end %>
          <div style="margin-bottom:4px;"><%= link_to "Join the Movement", dt_upowered_path %></div>
        </div>
      </aside>
    </div>
    <div class="span-10 last">
      <nav class="subnav append-bottom clearfix">
        <ol>
          <% if @iend_profile.list_projects_funded? %><li<%= ' class="current"' if current_nav?('users') %>><%= link_to "Projects", iend_user_path(@user) %></li><% end %>
          <!-- <li<%= ' class="current"' if current_nav?('friends') %>><%= link_to "Friends", "#" %><%# iend_user_friends_path(@user) %></li> -->
        </ol>
      </nav>

      <!-- paging goes here -->
      <div class="span-9 prepend-1 pageshadow-10 last">
        <div class="clearfix" id="projects">
        <% @user.projects_funded.each_with_index do |project, i| %>
          <div class="span-4 append-bottom<%= ' last' if (i+1)%2 == 0 %>">
            <%= render :partial => 'dt/projects/project', :locals => { :project => project } %>
          </div>
        <% end %>
        </div>
        
        <div class="fb-comments" data-href="<%= iend_user_path(@user) %>" data-num-posts="2" data-width="480"></div>
      </div>
    </div>
  </div>
<% end %>
