  <div class="clearfix" id="impact-stats">
    <div class="span-2 profile-stats-impact left">
      <div id='impact-text'>Impact</div>
    </div>

    <div id="stats-tabs" class="span-2 profile-stats-impact">
      <div class="impact-tab" id="impact-tab-me">Me</div>
      <div class="impact-tab" id="impact-tab-friends">My Friends &amp; I</div>
      <div class="impact-tab" id="impact-tab-uend">UEnd</div>
    </div>
  
    <div id="impact-stats-me" class="span-9 append-1 last profile-stats">
      <div class="span-3">
        <div class="stats-value"><%= number_with_delimiter(@gifts_given_count) %></div>
        <div class="stats-text">gifts</div>
      </div>
      <div class="span-3">
        <div class="stats-value"><%= number_to_currency(@given_amount, :precision => 0) %></div>
        <div class="stats-text">dollars</div>
      </div>
      <div class="span-3 last">
        <div class="stats-value"><%= number_with_delimiter(@people_affected) %></div>
        <div class="stats-text">people affected</div>
      </div>
    </div>

    <div id="impact-stats-friends" class="span-9 append-1 last profile-stats" style="display:none">
      <div class="span-3">
        <div class="stats-value"><%= number_with_delimiter(@collective_gifts_given_count) %></div>
        <div class="stats-text">gifts</div>
      </div>
      <div class="span-3">
        <div class="stats-value"><%= number_to_currency(@collective_given_amount, :precision => 0) %></div>
        <div class="stats-text">dollars</div>
      </div>
      <div class="span-3 last">
        <div class="stats-value"><%= number_with_delimiter(@collective_people_affected) %></div>
        <div class="stats-text">people affected</div>
      </div>
    </div>

    <div id="impact-stats-uend" class="span-9 append-1 last profile-stats" style="display:none">
      <div class="span-3">
        <div class="stats-value"><%= number_with_delimiter(@uend_gifts_given_count, :precision => 0) %></div>
        <div class="stats-text">gifts</div>
      </div>
      <div class="span-3">
        <div class="stats-value"><%= number_to_currency(@uend_given_amount, :precision => 0) %></div>
        <div class="stats-text">dollars</div>
      </div>
      <div class="span-3 last">
        <div class="stats-value"><%= number_with_delimiter(@uend_people_affected, :precision => 0) %></div>
        <div class="stats-text">people affected</div>
      </div>
    </div>
  </div>