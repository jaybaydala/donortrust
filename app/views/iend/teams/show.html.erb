<% content_for :html_title do %>iEnd:Poverty - Team <%=h @team.name %><% end %>

<% content_for :header do %>
  <div class="feature">
    <h1>End Global Poverty</h1>
    <p>The world is changing. Gift Different</p>
  </div>
<% end %>

<% content_for :top_content do %>
  <div class="clearfix">
    <div class="prepend-top prepend-2">
      <h1>Team <%=h @team.name %> for <%=h @team.campaign.name %></h1>
    </div>
  </div>
<% end %>

<div class="clearfix">
  <div class="span-10">
    <h3>Goal: <%=h number_to_currency @team.goal %></h3>
    <p><%=h @team.description %></p>
  </div>
  <div class="span-4 last">
    <%= render :partial => 'team_members' %>
  </div>
</div>