<% content_for :top_content do %>
  <div class="clearfix">
    <div class="prepend-top append-bottom prepend-2">
      <h1>iEnd Campaigns</h1>
    </div>
  </div>
<% end %>

<% title(params[:search].blank? ? 'Featured Campaigns' : nil ) %>
<div class="clearfix">

  <div class="buttons"><%= link_to "Create a new campaign", new_iend_campaign_path, :class => 'smallbutton' %></div>

  <div class="iend-campaigns">
    <% @campaigns.each_with_index do |c, i| %>
      <div class="span-4 append-bottom<%= ' last' if (i+1)%3 == 0 %>">
        <%= render :partial => "campaign_summary", :locals => {:campaign => c} %>
      </div>
    <% end %>
  </div>
</div>