<% content_for :html_title do %>iEnd:Poverty - <%=h @campaign.name %><% end %>
<% content_for :title do %><%=h @campaign.name %><% end %>

<% content_for :header do %>
  <div class="feature">
    <h1>End Global Poverty</h1>
    <p>The world is changing. Gift Different</p>
  </div>
<% end %>

<% content_for :top_content do %>
  <div class="clearfix">
    <div class="prepend-2 prepend-top append-bottom">
      <h1><%=h @campaign.name %></h1>
      <% if @campaign.user == current_user %>
        <div class="buttons prepend-top">
          <%= link_to "Donate to this campaign", new_iend_campaign_campaign_donation_path(@campaign), :class => "smallbutton" %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<% content_for :sidebar do %>
<div class="buttons clearfix">
  <%= link_to 'Edit', edit_iend_campaign_path(@campaign), :class => "smallbutton" %>
  <%= link_to 'Remove', iend_campaign_path(@campaign), :method => :delete, :confirm => "Are you sure you want to remove this campaign?", :class => "smallbutton" %>
</div>
<% end %>

<div class="clearfix dark-box">
  <div class="span-10">
    <h1>Goal: <%= number_to_currency @campaign.goal %></h1>
    <h1>Amount Raised: <%= number_to_currency @campaign.amount_raised %></h1>
    <p>
      <% @campaign.sectors.each do |sector| %>
        <%= image_tag("/images/icons/#{sector.image_name(16)}", :alt => "#{sector.name}", :width => 16, :height => 16, :style => "vertical-align:bottom;") %>
        <%= sector.name %>
      <% end %>
    </p>
    <%= simple_format @campaign.description %>
  </div>
  <div class="span-10">
    <%= render :partial => "teams" %>
    <%= render :partial => "participants" %>
  </div>
</div>