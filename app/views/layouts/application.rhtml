<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <title><%=h @page_title + ' | ' if @page_title %>ChristmasFuture</title>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
  <meta name="description" content="" />
  <meta name="keywords" content="ChristmasFuture, Change the world for good." />
	
  <%= javascript_include_tag 'prototype' %>
  <%= javascript_include_tag 'effects' %>
  <%= javascript_include_tag 'dragdrop' %>
  <%= javascript_include_tag 'controls' %>
  
  <%= javascript_include_tag @action_js if @action_js %>
  <%= stylesheet_link_tag 'bus_admin/base.css' %>
  <%= stylesheet_link_tag 'bus_admin/navigation.css' %>
  <%= javascript_include_tag 'theme' if @action_js =~ /timeline-api\.js/ %>
  <%= stylesheet_link_tag 'timeline-custom.css' if @action_js =~ /timeline-api\.js/ %>
  
  <%= stylesheet_link_tag 'redbox' %>
  <%= javascript_include_tag :defaults %>
  <%= active_scaffold_includes %>
  <%= stylesheet_link_tag 'redbox' %> 
  <%= javascript_include_tag 'redbox' %>
  <%= javascript_include_tag 'tabbed_pane' %>
  <%= stylesheet_link_tag 'tabbed_pane' %>

</head>
<body>
<div id="container">
  <div id="main">
    <div id="content">
<%= bus_head %>

<%= bus_nav %>

<div id="featurePhoto" style="height:130px;">
  <%= image_tag bus_masthead_image, :alt => '' %>
</div>
<div id="toolbar">
	<div style="padding-top:8px;padding-left:8px;">
		<select name="site" size="-1" onchange ="textLinkRedirector(this.value)">
            <option value="">Manage...</option>
			<option value="/bus_admin/contacts">Contacts</option>
			<option value="/bus_admin/causes">Causes</option>
            <option value="/bus_admin/frequency_types">Frequency Types</option>
            <option value="/bus_admin/group_types">Group Types</option>
            <option value="/bus_admin/groups">Groups</option>
            <option value="/bus_admin/measures">Measures</option>
            <option value="/bus_admin/milestone_statuses">Milestone Statuses</option>
            <option value="/bus_admin/millennium_goals">Millennium Goals</option>
            <option value="/bus_admin/partner_types">Partner Categories</option>
            <option value="/bus_admin/partner_statuses">Partner Statuses</option>
			<option value="/bus_admin/places">Places</option>                
            <option value="/bus_admin/place_sectors">Place Sectors</option>
            <option value="/bus_admin/project_statuses">Project Statuses</option>
			<option value="/bus_admin/quick_facts">Quick Facts</option>
			<option value="/bus_admin/rank_types">Rank Categories</option>
            <option value="/bus_admin/sectors">Sectors</option>
            <option value="/bus_admin/index">Users</option>
   		</select>
	</div>
</div>

<%= yield %>

<%= bus_footer %>

    </div>
  </div>
</div>
<script src="http<%= request.ssl? ? 's://ssl' : '://www' %>.google-analytics.com/urchin.js" type="text/javascript"></script>
<!--googlestats-->
</body>
</html>