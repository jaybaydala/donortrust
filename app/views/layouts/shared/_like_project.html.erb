<script type="text/javascript">
  $(document).ready(function(){

      $(".like_project").live("click", function(){
        var element = $(this);
        var id = element.attr("id");
        var like_url = "<%= root_url %>" + "dt/projects/" + id + "/like";
        post_like(element, like_url);  
      });

      $(".like_sector").live("click", function(){
        var element = $(this);
        var id = element.attr("id");
        var like_url = "<%= root_url %>" + "dt/sectors/" + id + "/like";
        post_like(element, like_url);  
      });

      function post_like(element, url){
        $.post(
            url, 
            { like: 'true', network: 'local'},         
            function(data){
              element.find(".likes_count").html(data['likes_count']);
            }
        );
      
      };

  });
</script>

