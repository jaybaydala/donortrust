<script type="text/javascript">
  $(document).ready(function(){

      $(".like_project").live("click", function(){
        var elem = $(this);
        var id = elem.attr("id");
        var like_url = "<%= root_url %>" + "dt/projects/" + id + "/like";
        $.post(
            like_url, 
            { like: 'true', network: 'local'},         
            function(data){
              $("span.likes_count").html(data['likes_count']);
            }
        );
      });

  });
</script>

