<header>
  <section id="top" class="shadowbottom">
    <div class="content">
      <h1 id="logo"><a href="/">uEnd:poverty</a></h1>
      <article id="account">
        <% if logged_in? %>
        <%= link_to "Account Settings", "#" %> | <%= link_to "Logout", dt_logout_path %>
        <% else %>
        <%= link_to "Login", dt_login_path %>
        <% end %>
        <span id="social">
          <a href="#"><img src="/images/icons/rss.png" width="18" height="18" alt="RSS"></a>
          <a href="#"><img src="/images/icons/twitter.png" width="18" height="18" alt="Twitter"></a>
          <a href="#"><img src="/images/icons/facebook.png" width="18" height="18" alt="Facebook"></a>
        </span>
      </article>
    </div>
  </section>
  <div id="headercontent" class="content">
    <nav id="nav">
      <ol>
        <li id="nav-give"><%= link_to "Give", dt_give_path %></li>
        <li id="nav-poverty"><a href="#">Poverty</a></li>
        <li id="nav-projects"><%= link_to "Projects", dt_projects_path %></li>
        <li id="nav-campaigns"><%= link_to "Campaigns", dt_campaigns_path %></li>
        <li id="nav-about_us"><a href="#">About Us</a></li>
        <li id="nav-blog"><a href="#">Blog</a></li>
        <li id="nav-iend"><a href="#">iEnd</a></li>
      </ol>
    </nav>
    <%= yield :header %>
  </div>
</header>
